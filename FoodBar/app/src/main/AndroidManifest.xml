<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oop.project.foodjar">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="oop.project.foodbar.Outlet"></activity>
        <activity android:name="oop.project.foodbar.RiderDashboardActivity" />
        <activity android:name="oop.project.foodbar.ClientDashboardActivity" />
        <activity android:name="oop.project.foodbar.LoginActivity" />
        <activity android:name=".RiderApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>